<?xml version="1.0" encoding="UTF-8"?>
<characterModel>
    <modelName>Wilson</modelName>
    <spritePath>assets/img/wilson</spritePath>
    <components>
        <component type="body">
            <sprite src="body.png" x="0" y="0" width="100" height="200" visibility="visible" />
        </component>
        <component type="head">
            <sprite src="head.png" x="0" y="-50" width="80" height="80" visibility="visible" />
