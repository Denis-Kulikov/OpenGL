        </component>
        <component type="arms">
            <component type="leftArm">
                <sprite src="left_arm.png" x="-30" y="50" width="40" height="100" visibility="visible" />
            </component>
            <component type="rightArm">
                <sprite src="right_arm.png" x="30" y="50" width="40" height="100" visibility="visible" />
            </component>
        </component>
    </components>
